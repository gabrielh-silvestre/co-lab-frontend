{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vitest/globas"],

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      "@/*": ["src/*"],
      "@worker/*": [
        "src/application/domain/worker/*",
        "src/application/infra/worker/*"
      ],
      "@company/*": [
        "src/application/domain/company/*",
        "src/application/infra/company/*"
      ],
      "@auth/*": [
        "src/application/domain/auth/*",
        "src/application/infra/auth/*"
      ],
      "@shared/*": [
        "src/application/domain/shared/*",
        "src/application/infra/shared/*"
      ]
    }
  },
  "include": ["src", "tests"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
